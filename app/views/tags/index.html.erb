<p style="color: green"><%= notice %></p>

<h1>Tags</h1>

<div id="tags">
  <% @tags.each do |tag| %>
    <%= render tag %>
  <p>
    <%= link_to "EDIT", edit_tag_path(tag) %>
    <%= link_to "DELETE", tag, data: {turbo_method: :delete} %>
  </p>
  <% end %>
</div>

<%= link_to "Create a new [item].", new_tag_path %>
