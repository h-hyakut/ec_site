<h1>Product order.</h1>

<%= form_with(model: @order, url: orders_confirm_path, local: true) do |form| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>
      <ul>
        <% @order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, min: 1 %>
  </div>

  <div class="field">
    <%= form.label :shipping_address %>
    <%= form.text_area :shipping_address %>
  </div>

  <div class="actions">
    <%= form.submit "Proceed to the next step." %>
  </div>
<% end %>
