<h1>☑Confirmation</h1>
  <p>🐱<[Please, confirm your order.]</p>

<style>
.link {
  background-color: #B2EBF2; /* パステルの黄色 (#FFF176) */
  padding: 10px 20px; /* パディングを適切に設定 */
  text-decoration: none; /* 下線を削除 */
  color: black; 
  border-radius: 5px; 
  border: none;
  font-size: 15px;
}

.link:hover {
  background-color:  #80DEEA;
  /* ホバー時の色変更 */
}
</style>
  

<%= form_with(model: @order, local: true) do |form| %>
  <% if @order.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@order.errors.count, "error") %> prohibited this article from being saved:</h2>

        <ul>
          <% @order.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
      </div>
  <% end %>


<% @books.each do |book|%>
  <%= form.hidden_field :book_ids, value: book.id, name: "order[book_ids][]" %>
<% end %>

  <div class="field">
  <%= form.hidden_field :count, value: @current_cart.total_number %>
  </div>
  

  <% @line_items.each do |line_item| %>
    <% book = line_item.book %>
    <div>
      <p>📖<%= book.title %></p>
      <p>・<%= line_item.quantity %>items</p>
      <p>
        💰￥<%= line_item.item_total_price %>
        <span>(Including tax)</span>
      </p>
    </div>
  <% end %>

  <strong>
  <div>
    <p>📚 Quantity of orders: <%= @current_cart.total_number %><span> items</span></p>
    <p>
      💴 Total price:￥<%= @current_cart.total_price %>
      <span>(Including tax)</span>
    </p>
  </div>
  </strong>

  <div class="field">
    <p><%= form.label :address %></p>
    <%= @order.address %>
    <%= form.hidden_field :address %>
  </div>
      
  <div class="actions">
    <%= form.submit "Confirm your order." %>
  </div>

<% end %>
