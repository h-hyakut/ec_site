<div id="<%= dom_id book %>">
  <p>
    <strong>.*★📖Title*.⁺:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong>👤Author</strong>
    <%= book.author %>
  </p>

  <p>
    <strong>⌚Publushed on</strong>
    <%= book.publushed_on %>
  </p>

  <% if book.on_sale? %>
    <p><strong>📚Status:</strong> <span style="color: green;">On sale</span></p>
  <% elsif book.sold_out? %>
    <p><strong>📚Status:</strong><span style="color: red;">Sold out</span></p>
  <% end %>
  </p>

  <p>
    <strong>💴Price:</strong>
    <%= book.price %>
  </p>

  <p>
  <strong>👓Showing:</strong>
  <%= book.showing %>
  </p>

  <p>
  <strong>📑Tag:</strong>
  <%= book.tags.map(&:name).join(', ') %>
  </p>

</div>

<!-- render book -->