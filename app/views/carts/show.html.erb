<style>
.add {
  background-color: #FFC896; /* パステルオレンジ (#FFF176) */
  padding: 10px 20px; /* パディングを適切に設定 */
  text-decoration: none; /* 下線を削除 */
  color: black; 
  border-radius: 5px; 
}

.add:hover {
  background-color: #FFB680; 
  /* ホバー時の色変更 */
}

</style>
</style>



<h1>Cart🛒</h1>

<% @line_items.each do |line_item| %>
  <% book = line_item.book %>
  <div>
    <p><%= book.title %></p>
    <p><%= line_item.quantity %>items</p>
    <p>
      ￥<%= line_item.item_total_price %>
      <span>(Including tax)</span>
    </p>
  </div>
<% end %>

<div>
  <p>📚 Quantity of orders: <%= @current_cart.total_number %><span> items</span></p>
  <p>
    💴 Total price:￥<%= @current_cart.total_price %>
    <span>(Including tax)</span>
  </p>
</div>

<% if @line_items.count == 0 %>
  <strong>Your shopping cart is empty🛒…</strong>
<% else %>
  <%= link_to "Add to cart🛒=3", new_order_path, class:"add" %>
<% end %>
  <%= link_to "Clear the shopping cart.", @cart, data: { "turbo-method": :delete, "turbo-confirm": "May I delete all items from your shopping cart?" } %> 
